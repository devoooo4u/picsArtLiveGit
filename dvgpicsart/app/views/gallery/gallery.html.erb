  <%= stylesheet_link_tag 'darkbox.css' %>
  <%= javascript_include_tag 'darkbox.js' %>
<div class="div-left">
    <ul id="sortable1">
        <% @categories.each do |ct| %>
			<li id=<%= ct.id%>>
				<%= ct.Title%>
			</li>		
		<%end%>
    </ul>
</div>
<div class="div-right">	
    <div id="pics">
		<% @category.pictures.each do |pc| %>
		<div class="img-wrapper">
			<img class="thumbnailImg"
                src=<%=pc.Path%>/<%=pc.Title%>
                data-darkbox=<%=pc.Path%>/<%=pc.Title%>
                data-darkbox-description="<b><%=pc.Title%></b><br><%=pc.Description%>">
        </div>
		<% end %>	
	</div>
</div>

<style type="text/css">
.thumbnailImg{
    width:300px !important;
    height:250px;    
    -webkit-filter: grayscale(90%);
}
.img-wrapper {
    display: inline-block;
    overflow: hidden;    
    border: 4px solid black;
}

.img-wrapper img {
    -webkit-transition: all .4s ease;
    -moz-transition: all .4s ease;
    transition: all .4s ease;
    vertical-align: middle;
    -webkit-filter: grayscale(90%);
}

.img-wrapper img:hover {
    -webkit-transform:scale(1.3); /* Safari and Chrome */
    -moz-transform:scale(1.3); /* Firefox */
    -o-transform:scale(1.3); /* Opera */
    transform:scale(1.3);
    -webkit-filter: grayscale(0%);
}
.div-left{
    width:20%;
    position: fixed;
    float:left;
}
.div-right{
    width:80%;
    position: fixed;
    float:right;
    margin-left: 20%;
}
ul#sortable1 {
	list-style-type: none;
    margin: 0;
    padding: 0;
    display: table-caption;
    box-shadow: 7px 7px 5px #9166ca;
    background-color: #9166ca;
}

ul#sortable1 li {
    display: table-caption;
    color: whitesmoke;
    padding: 14px 16px;
    text-decoration: none;
    font-weight: bold;
    font-size: 20px;
    background-color: #E91E63;
    width:150px;
    border-radius: 3px;
}

ul#sortable1 li:hover {
    transition: all 0.3s ease;
	color:#bdcabd;
	background-color: #524e4e;
	border-radius: 2px;
	margin-left: 20%;
	cursor: -webkit-grab;
	border-radius:5px;
}

</style>
