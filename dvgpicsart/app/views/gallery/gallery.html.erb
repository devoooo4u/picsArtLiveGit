  <%= stylesheet_link_tag 'darkbox.css' %>
  <%= javascript_include_tag 'darkbox.js' %>
<div class="div-left">
    <ul id="sortable1">
        <% @categories.each do |ct| %>
			<li>
			<%= link_to ct.Title, {:action => 'getPicsByCategory', :id => ct.id} %>
			</li>		
		<%end%>
    </ul>
</div>
<div class="div-right">
    <div id="pics">
		<% @category.pictures.each do |pc| %>
		<div class="img-wrapper">
			<img class="thumbnailImg"
                src=<%=pc.Path%>/<%=pc.Title%>
                data-darkbox=<%=pc.Path%>/<%=pc.Title%>
                data-darkbox-description="<b><%=pc.Title%></b><br><%=pc.Description%>"><br/>
            <div id="picOptions"><a target="_blank" download href=<%=pc.Path%>/<%=pc.Title%>>Download</a>&nbsp;|&nbsp;<a href="#">Share</a>
            </div>
        </div>
       	<% end %>	
	</div>
</div>

<style type="text/css">
.thumbnailImg{
    width:300px !important;
    height:230px;    
    -webkit-filter: grayscale(90%);
}
.img-wrapper {
    display: inline-block;
    overflow: hidden;    
    border: 4px solid black;
}

.img-wrapper img {
    -webkit-transition: all .4s ease;
    -moz-transition: all .4s ease;
    transition: all .4s ease;
    vertical-align: middle;
    -webkit-filter: grayscale(90%);
    -moz-filter: grayscale(90%);
    filter: grayscale(90%);
}

.img-wrapper img:hover {
    -webkit-transform:scale(1.3); /* Safari and Chrome */
    -moz-transform:scale(1.3); /* Firefox */
    -o-transform:scale(1.3); /* Opera */
    transform:scale(1.3);
    -webkit-filter: grayscale(0%);
     -moz-filter: grayscale(0%);
    filter: grayscale(0%);
}
.img-wrapper div#picOptions:hover{
    background-color: red;
    transition: all 0.3s ease;
}
#picOptions {
    width:300px;
    float:left;    	
    background-color: black;    
    color:white;    
}
#picOptions a{
    color:white;
    text-decoration: none;
    font-size: 15px;
}
.div-left{
    width:20%;
    position: fixed;
    float:left;
}
.div-right{
    width:80%;
    position: absolute;
    float:right;
    margin-left: 20%;
}
ul#sortable1 {
	list-style-type: none;
    margin: 0;
    padding: 0;
    display: table-caption;
    /*box-shadow: 7px 7px 5px #9166ca;
    background-color: #9166ca;*/
}

ul#sortable1 li a{
    display: table-caption;
    color: whitesmoke;
    padding: 14px 16px;
    text-decoration: none;
    font-weight: bold;
    font-size: 20px;
    background-color: #E91E63;
    width:150px;
    border-radius: 2px;
    border-color: #cc0d4e;
}

ul#sortable1 li a:hover {
    transition: all 0.3s ease;
	color:#bdcabd;
	background-color: #524e4e;
	border-radius: 2px;
	margin-left: 20%;
	cursor: pointer;
	border-radius:5px;
}

.activeCategory{
	color:#bdcabd;
	background-color: #524e4e;
	border-radius: 2px;
	margin-left: 20%;
	border-radius:5px;
}

</style>
